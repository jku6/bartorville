<h1><%= @auth.username %>'s items</h1>


  <% @items.each do |item| %>
    <div class="image">
      <%= image_tag item.image.large.url %>
    </div>
    <div class="description">
      <%= item.description %>
    </div>



 
   <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %>
   <%= link_to 'Edit', edit_item_path(item) %>
<% end %>
 
