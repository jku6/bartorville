<%=  form_for @photo, :html => {:multipart => true} do |f| %>
  
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %> 
    <%= f.text_field :remote_image_url, :placeholder => "Or enter a url" %>
    <%= image_tag( @photo.image_url) if  @photo.image? %>
  </div>

   <div class="field">
     <%= f.label :caption %>
     <%= f.text_field :caption %>
   </div>

   <div class="submit"><%= f.submit %></div>
<% end %>